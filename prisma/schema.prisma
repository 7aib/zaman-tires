generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Diameter {
  id       Int       @id @default(autoincrement())
  value    Int       @unique
  products Product[]
}

model Brand {
  id       String    @id @default(uuid())
  name     String    @unique
  type     String
  products Product[]
}

model Product {
  id          String    @id @default(uuid())
  name        String
  type        String
  description String
  price       Float
  quantity    Int       @default(0)
  imageUrl    String?
  diameterId  Int?
  brandId     String?
  rimWidth    String?
  tireProfile String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  brand       Brand?    @relation(fields: [brandId], references: [id], onDelete: Restrict)
  diameter    Diameter? @relation(fields: [diameterId], references: [id], onDelete: Restrict)
}
